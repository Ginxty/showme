<h1 class="index">Current Sparta Projects</h1>

<div class="row">
  <% @projects.each do |project| %>
    <div class="container-fluid">
      <div class="col-md-3">
        <div class="card cards">
          <div class="card-body card">
            <div><%= project.screenshot %></div>
            <div><%= project.description %></div>
            <div><%= project.technologies %></div>
            <div><h6>Project URL</h6><%= project.url %></div>
            <div><%= project.public_private %></div>
            <button><%= link_to 'Show', [project.user, project] %></button>
            <button><%= link_to 'Edit', edit_user_project_path(project.user, project) %></button>
            <button><%= link_to 'Destroy', [project.user, project], :confirm => 'Are you sure?', :method => :delete %>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br />

<button class="index"><%= link_to 'New Project', new_user_project_path(current_user.id) %></button>



        