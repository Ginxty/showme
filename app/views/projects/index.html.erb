<h1>Listing projects</h1>

<table>
  <tr>
    <th>Screenshot</th>
    <th>Description</th>
    <th>Technologies</th>
    <th>Url</th>
    <th>Public private</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= image_tag project.screenshot %></td>
    <td><%= project.description %></td>
    <td><%= project.technologies %></td>
    <td> <a href="<%=project.url%>"> <%= project.url %> </a> </td>
    <td><%= project.public_private %></td>
    <td><%= link_to 'Show', [project.user, project] %></td>
    <td><%= link_to 'Edit', edit_user_project_path(project.user, project) %></td>
    <td><%= link_to 'Destroy', [project.user, project], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_user_project_path(current_user.id) %>
